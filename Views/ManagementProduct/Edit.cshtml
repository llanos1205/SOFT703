@model SOFT703.Models.ViewModels.Contracts.IManagementProductViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<form asp-controller="ManagementProduct" asp-action="Edit" method="post">
    <input type="hidden" asp-for="Product.Id" />
    <div class="form-group">
        <label asp-for="Product.Name">Name</label>
        <input asp-for="Product.Name" class="form-control"/>
        <span asp-validation-for="Product.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Product.Photo">Photo Url</label>
        <input asp-for="Product.Photo" class="form-control"/>
        <span asp-validation-for="Product.Photo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Product.Price">Price</label>
        <input asp-for="Product.Price" class="form-control"/>

    </div>
    <div class="form-group">
        <label asp-for="Product.Stock">Stock</label>
        <input asp-for="Product.Stock" class="form-control"/>

    </div>



    <button type="submit" class="btn btn-primary">Update</button>
</form>