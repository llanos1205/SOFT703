@model SOFT703.Models.ViewModels.Contracts.IManagementUserViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Users</h2>
<a href="@Url.Action("Add", "ManagementUser")" class="btn btn-primary">Create User</a>
<table class="table">
    <thead>
    <tr>
        <th>Username</th>
        <th>Email</th>
        <th>Phone</th>
        <th>First Name</th>
        <th>Last Name</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var users in Model.Users)
    {
        <tr>
            <td>@users.UserName</td>
            <td>@users.Email</td>
            <td>@users.PhoneNumber</td>
            <td>@users.FirstName</td>
            <td>@users.LastName</td>
            <td>
                <a href="@Url.Action("Detail", "ManagementUser", new { id = users.Id })" class="btn btn-primary">Details</a>
                <a href="@Url.Action("Edit", "ManagementUser", new { id = users.Id })" class="btn btn-primary">Edit</a>
                <a href="@Url.Action("Delete", "ManagementUser", new { id = users.Id })" class="btn btn-primary">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>